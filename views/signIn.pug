extends base

block reference
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
  script(defer src='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js')
  script(defer src='./js/SignIn.js' type='text/javascript')

block content
  include _loggedOutNavBar
  .bg-image(style="\
  background-image: url('./images/sign background.svg');\
  height: 89vh;\
  background-repeat: no-repeat;\
  background-size: cover;\
  ")
    section.container-lg.h-100
      .row.justify-content-evenly.align-items-center.h-100
        .p-4.text-dark.bg-light.col-11.col-sm-7.col-xl-5.shadow-lg.rounded-4
          .mt-3.fw-bold.fs-2.text-center Welcome Back!
          .container.px-5.my-5
            form.signInForm(onsubmit='return validate(event)')
              .mb-3
                label.form-label(for='emailAddress') Email Address
                .input-group.has-validation
                  span#inputGroupPrepend1.input-group-text
                    i.fa.fa-envelope-o
                  input#emailAddress.form-control(type='text' placeholder='Email Address')
              .mb-3
                label.form-label(for='password') password
                .input-group.has-validation
                  span#inputGroupPrepend2.input-group-text
                    i.fa.fa-lock
                  input#password.form-control(type='password' placeholder='••••••••••••••••')
              input.mb-3(type='checkbox' onclick='myFunction()')
              .d-inline.fw-light &nbsp;Show Password
              .text-center
                button#submitButton.btn.btn-primary.w-50.btn-lg.rounded-4.text-success(type='submit')
                  | Sign in
          .text-center.px-4
            svg.w-100(height='5' width='')
              line(x1='0' y1='0' x2='2000' y2='0' style='stroke: #d9d9d9; stroke-width: 2')
              |                 Sorry, your browser does not support inline SVG.
            img.w-100(src='./images/undraw_login_re_4vu2.svg' alt='login')