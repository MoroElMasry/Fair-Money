                img.caretRight.mx-2.mt-1(src='./images/caret-right.svg' alt='caret right' width='13')
          .order-md-1.order-0.p-0
            .d-flex.flex-md-column.flex-row
              .ms-3.mb-2.d-md-block.d-none.fw-light.small
                div
                  img(src='./images/green square.svg' alt='green square')
