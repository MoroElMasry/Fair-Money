          .bg-secondary.order-md-0.order-1.flex-fill.p-0.rounded-4.overflow-auto.scroller.mb-2.border.border-primary.border-2
            .group--admin--card
              .position-relative
                img.position-absolute.top-0.end-0.mt-2.me-2(src='./images/key icon.svg' alt='key icon' width='15')
                img.m-2(src='./images/profiles/male profile1.svg' alt='profile' width='50')
              .align-self-center.fs-2.fw-light.w-50.baseline.text-overflow-2
                | user name
              .youOwesUser
                | 505
